@prefix sh:	<http://www.w3.org/ns/shacl#>.
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.w3.org/2022/example#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix aircraft: <http://www.dke-pr/aircraft#>.
@prefix state: <http://www.dke-pr/state#>.
@prefix response: <http://www.dke-pr/response#>.
@prefix property: <http://www.dke-pr/property#>.
@prefix manufacturer: <http://www.dke-pr/manufacturer#>.
@prefix operator: <http://www.dke-pr/operator#>.

ex:AircraftShape
	a sh:NodeShape;
	sh:targetClass aircraft:Aircraft;
    sh:closed true ;
    sh:property [
        sh:path rdf:type
    ];
	
	sh:property [
		sh:path property:hasIcao24;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasRegistration;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasAircraftModel;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasTypeCode;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasSerialNumber;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasIcaoAircraftType;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasRegistered;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasRegUntil;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasBuilt;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasFirstFlightDate;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasModes;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasAdsb;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasAcars;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasNotes;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasCategoryDescription;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasOwner;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:hasEngine;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
          	sh:path property:hasManufacturer ;
          	sh:class manufacturer:Manufacturer ;
          	sh:maxCount 1;
      	];

	sh:property [
          	sh:path property:hasOperator ;
          	sh:class operator:Operator ;
          	sh:maxCount 1;
      	].


ex:ManufacturerShape
	a sh:NodeShape;
	sh:targetClass manufacturer:Manufacturer;
	sh:closed true ;

	sh:property [
            sh:path rdf:type
        ];

	sh:property [
		sh:path property:hasManufacturerIcao;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasManufacturerName;
		sh:datatype xsd:string;

	].

ex:OperatorShape
	a sh:NodeShape;
	sh:targetClass operator:Operator;

	sh:property [
            sh:path rdf:type
        ];

	sh:property [
		sh:path property:hasOperatorIcao;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorIata;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorName;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorCallsign;
		sh:datatype xsd:string;
	].
