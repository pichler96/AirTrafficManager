@prefix sh:	<http://www.w3.org/ns/shacl#>.
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.w3.org/2022/example#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix aircraft: <http://www.dke-pr/aircraft#>.
@prefix state: <http://www.dke-pr/aircraft/state#>.
@prefix response: <http://www.dke-pr/aircraft/response#>.


ex:AircraftShape
	a sh:NodeShape;
	sh:targetClass ex:Aircraft;
    sh:closed true ;
	
	sh:property [
		sh:path ex:hasIcao24;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegistration;
		sh:datatype xsd:string;
		sh:maxCount 1;
		sh:minCount 2;
	];
	sh:property [
		sh:path ex:hasAircraftModel;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasTypeCode;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasSerialNumber;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasIcaoAircraftType;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegistered;
		sh:datatype xsd:localDate;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegUntil;
		sh:datatype xsd:localDate;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasBuilt;
		sh:datatype xsd:localDate;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasFirstFlightDate;
		sh:datatype xsd:localDate;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasModes;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasAdsb;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasAcars;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasNotes;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasCategoryDescription;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasOwner;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasEngine;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
          	sh:path ex:hasManufacturer ;
          	sh:node ex:Manufacturer ;
          	sh:maxCount 1;
      	];
	sh:property [
          	sh:path ex:hasOperator ;
          	sh:node ex:Operator ;
          	sh:maxCount 1;
      	].


ex:ManufacturerShape
	a sh:NodeShape;
	sh:targetClass ex:Manufacturer;
	sh:closed true ;
	sh:property [
		sh:path ex:hasManufacturerIcao;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasManufacturerName;
		sh:datatype xsd:string;
		sh:maxCount 1;
	].

ex:OperatorShape
	a sh:NodeShape;
	sh:targetClass ex:Operator;
	sh:property [
		sh:path ex:hasIcao;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasIata;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasName;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasCallsign;
		sh:datatype xsd:string;
		sh:maxCount 1;
	].
