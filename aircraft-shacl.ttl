@prefix sh:	<http://www.w3.org/ns/shacl#>.
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.w3.org/2022/example#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix aircraft: <http://www.dke-pr/aircraft#>.
@prefix state: <http://www.dke-pr/state#>.
@prefix response: <http://www.dke-pr/response#>.
@prefix property: <http://www.dke-pr/property#>.
@prefix manufacturer: <http://www.dke-pr/manufacturer#>.
@prefix operator: <http://www.dke-pr/operator#>.

ex:AircraftShape
	a sh:NodeShape;
	sh:targetClass ex:Aircraft;
    sh:closed true ;
    sh:property [
        sh:path rdf:type
    ];
	
	sh:property [
		sh:path ex:hasIcao24;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegistration;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasAircraftModel;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasTypeCode;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasSerialNumber;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasIcaoAircraftType;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegistered;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasRegUntil;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasBuilt;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasFirstFlightDate;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasModes;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasAdsb;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasAcars;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasNotes;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasCategoryDescription;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasOwner;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasEngine;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
          	sh:path ex:hasManufacturer ;
          	sh:class ex:Manufacturer ;
          	sh:maxCount 1;
      	];
	sh:property [
          	sh:path property:hasManufacturer ;
          	sh:class ex:Manufacturer ;
          	sh:maxCount 1;
      	];
	sh:property [
          	sh:path property:hasOperator ;
          	sh:class ex:Operator ;
          	sh:maxCount 1;
      	].


ex:ManufacturerShape
	a sh:NodeShape;
	sh:targetClass ex:Manufacturer;
	sh:closed true ;

	sh:property [
            sh:path rdf:type
        ];

	sh:property [
		sh:path ex:hasManufacturerIcao;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path ex:hasManufacturerName;
		sh:datatype xsd:string;

	].

ex:OperatorShape
	a sh:NodeShape;
	sh:targetClass ex:Operator;

	sh:property [
            sh:path rdf:type
        ];

	sh:property [
		sh:path property:hasOperatorIcao;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorIata;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorName;
		sh:datatype xsd:string;
	];
	sh:property [
		sh:path property:hasOperatorCallsign;
		sh:datatype xsd:string;
	].
