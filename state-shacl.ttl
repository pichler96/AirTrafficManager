@prefix sh:	<http://www.w3.org/ns/shacl#>.
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.w3.org/2022/example#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix aircraft: <http://www.dke-pr/aircraft#>.
@prefix state: <http://www.dke-pr/aircraft/state#>.
@prefix response: <http://www.dke-pr/aircraft/response#>.
@prefix property: <http://www.dke-pr/property#>.
@prefix manufacturer: <http://www.dke-pr/manufacturer#>.
@prefix operator: <http://www.dke-pr/operator#>.


ex:StateShape
	a sh:NodeShape;
	sh:targetClass ex:State ;
    sh:closed true ;

    sh:property [
            sh:path rdf:type
        ];
	
	sh:property [
		sh:path ex:hasGeoAltitude;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasLongitude;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasLatitude;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasVelocity;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasHeading;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasVerticalRate;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path property:ofAircraft;
		sh:class ex:Aircraft;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasCallsign;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasOnGround;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasLastContact;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasLastPositionUpdate;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasOriginCountry;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasSquawk;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasSpi;
		sh:datatype xsd:boolean;
		sh:maxCount 1;
	];
	sh:property [
		sh:path ex:hasBaroAltitude;
		sh:datatype xsd:double;
		sh:maxCount 1;
	];
	
	sh:property [
		sh:path ex:hasPositionSource;
		sh:datatype xsd:string;
		sh:maxCount 1;
	];

	sh:property [
    		sh:path ex:hasResponse;
    		sh:datatype xsd:double;
    		sh:maxCount 1;
    ];

	sh:property [
    		sh:path ex:hasSerials;
    		sh:datatype xsd:string;
    		sh:maxCount 1;
    	].

